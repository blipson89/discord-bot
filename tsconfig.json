{
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@config" : ["src/config"],
      "@ai*": ["src/ai", "src/ai/*"],
      "@types/*": ["src/types", "src/types/*"],
      "@enums": ["src/enums"],
      "@/*" : ["src/*"]
    },
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "outDir": "./dist",         
    "removeComments": true, 
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "strict": true,            
    "strictNullChecks": true,
    "skipLibCheck": true       
  }
}